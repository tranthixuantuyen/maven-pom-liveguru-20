		<webdrivermanager.version>4.2.2</webdrivermanager.version>
		<aspectj.version>1.9.1</aspectj.version>
		<cucumber.version> 1.2.5 </cucumber.version>
		<selenium.version> 3.14.0 </selenium.version>

	</properties>
	
  <!-- Quản lí thư viện -->
